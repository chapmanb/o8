!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title Variant visualization    
    %link(rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.css")
    %link(rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap-responsive.css")
    %link(rel="stylesheet" type="text/css" href="vendor/chosen/chosen.css")
    %link(rel="stylesheet" type="text/css" href="style.css")
    %script(src="vendor/jquery-1.8.0.min.js")
    %script(src="vendor/jquery-ui-1.8.23.custom.min.js")
    %script(src="vendor/chosen/chosen.jquery.js")
    %script(src="vendor/bootstrap/js/bootstrap.min.js")
    %script(src="vendor/crossfilter.js")
    %script var CLOSURE_NO_DEPS = true;

  %body
    .navbar#navbar
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .brand Variant analysis
          %div.collapse.nav-collapse          
            %ul#top-navbar.nav
              %li.xprize
                %a(href="/xprize") XPrize scoring
              %li.xprize
                %a(href="/xprize/analyses") XPrize analyses
              %li
                %a(href="/viz") Visualize
            %ul#user-dropdown.nav.pull-right
              
    .wrapper
      %section.content
        #main-hist
          #histograms
          #hist-axis

        .controls
          .well
            %label VCF files
            #file-selector
        .row
          .span2
            %button.btn#filter-btn Download subset
          .span6
            %table.table.table-condensed#filter-summary
    
      %section.sidebar
        .tabbable.tab-left
          %ul.nav.nav-pills
            %li.active
              %a(href="#metrics" data-toggle="tab") Metrics
            %li
              %a(href="#cat-filters" data-toggle="tab") Categories
        .tab-content#metrics-content
          .tab-pane.active#metrics
          .tab-pane#cat-filters
    
    #waiting-modal.modal(role="dialog")
      .modal-body
        Loading...

    %script(src="vcf.js")
    %footer.footer
