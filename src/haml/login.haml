!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %link(rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.css")
    %link(rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap-responsive.css")
    %link(rel="stylesheet" type="text/css" href="style.css")
    %script(src="vendor/jquery-1.8.0.min.js")
    %script(src="vendor/jquery-ui-1.8.23.custom.min.js")
    %script(src="vendor/bootstrap/js/bootstrap.min.js")
    %title Variant visualization login
  %body
    %section#main.container
      %form#login(method="POST" action="/login")
        %legend Login
        .tabbable.tab-left
          %ul.nav.nav-tabs
            %li.active
              %a(href="#login-tab-gs" data-toggle="tab") GenomeSpace
            %li
              %a(href="#login-tab-galaxy" data-toggle="tab") Galaxy

          .tab-content
            .tab-pane.active#login-tab-gs
              .row
                .span4
                  %fieldset
                    .control-group
                      %label.control-label(for="username") Username:
                      .controls
                        %input#username(name="username" type="text" data-placeholder="username")
                    .control-group
                      %label.control-label(for="password") Password:
                      .controls
                        %input#password(name="password" type="password")
                .span4
                  %fieldset
                    .control-group
                      %label.control-label Sign up on GenomeSpace
                      %a.btn(href="http://www.genomespace.org/register" target="_blank") Register
                    .control-group                      
                      %label.control-label Or use the demonstration account
                      %ul.unstyled
                        %li Username: variantdemo
                        %li Password: demo
              
            .tab-pane#login-tab-galaxy
              %fieldset
                %label Galaxy server:
                %input#galaxy-server(name="galaxy-serrver" type="text" value="https://main.g2.bx.psu.edu/")
                %label API key:
                %input#galaxy-apikey(name="galaxy-apikey" type="text")
                %span.help-block On your Galaxy server, select API Keys from the User menu

        %input.btn.btn-primary(type="submit" value="Login")

